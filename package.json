{
  "name": "openbuilder-monorepo",
  "version": "0.50.2",
  "description": "AI-powered project generation platform with Claude AI and remote runner architecture",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/codyde/openbuilder.git"
  },
  "author": "Cody De Arkland",
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev --filter=openbuilder",
    "dev:all": "turbo run dev",
    "dev:opencode": "turbo run dev --filter=@openbuilder/opencode-service",
    "dev:full": "turbo run dev --filter=openbuilder --filter=@openbuilder/opencode-service --filter=@openbuilder/cli",
    "build": "turbo run build --filter=openbuilder",
    "build:all": "turbo run build",
    "build:cli": "turbo run build --filter=@openbuilder/cli",
    "build:agent-core": "turbo run build --filter=@openbuilder/agent-core",
    "build:opencode": "turbo run build --filter=@openbuilder/opencode-service",
    "start": "turbo run start --filter=openbuilder",
    "start:all": "turbo run start",
    "start:opencode": "turbo run start --filter=@openbuilder/opencode-service",
    "lint": "turbo run lint",
    "runner": "turbo run dev --filter=@openbuilder/cli",
    "local:prod": "turbo run build && turbo run start --filter=openbuilder"
  },
  "pnpm": {
    "overrides": {
      "@sentry/core": "file:./apps/openbuilder/vendor/sentry-core-1765299043.tgz",
      "@sentry/node": "file:./apps/openbuilder/vendor/sentry-node-1765299043.tgz",
      "@sentry/node-core": "file:./apps/openbuilder/vendor/sentry-node-core-1765299043.tgz",
      "@sentry/nextjs": "file:./apps/openbuilder/vendor/sentry-nextjs-1765299043.tgz"
    }
  },
  "devDependencies": {
    "turbo": "^2.5.8"
  },
  "dependencies": {
    "better-auth": "^1.4.9"
  }
}
