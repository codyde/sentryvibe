{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": [
        "corepack enable",
        "corepack prepare pnpm@9.15.0 --activate",
        "cd ../.. && pnpm install --filter=sentryvibe-broker..."
      ]
    },
    "build": {
      "inputs": ["install"],
      "commands": [
        "cd ../.. && pnpm --filter=sentryvibe-broker run build"
      ]
    }
  },
  "deploy": {
    "startCommand": "cd apps/broker && pnpm start",
    "inputs": ["build"]
  }
}
