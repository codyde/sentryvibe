{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "steps": {
    "setup": {
      "commands": [
        "export NODE_OPTIONS='--max-old-space-size=4096'",
        "cd ../.. && pnpm install --no-frozen-lockfile --filter=sentryvibe-broker"
      ]
    },
    "compile": {
      "inputs": ["$setup"],
      "commands": [
        "cd ../.. && pnpm --filter=sentryvibe-broker run build"
      ]
    }
  },
  "deploy": {
    "startCommand": "cd apps/broker && pnpm start",
    "inputs": ["$compile"]
  }
}
