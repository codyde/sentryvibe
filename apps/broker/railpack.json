{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "steps": {
    "setup": {
      "commands": [
        "NODE_OPTIONS='--max-old-space-size=4096' sh -c 'cd ../.. && pnpm install --frozen-lockfile --filter=sentryvibe-broker...'"
      ]
    },
    "compile": {
      "inputs": ["$setup"],
      "commands": [
        "cd ../.. && pnpm --filter=sentryvibe-broker run build"
      ]
    }
  },
  "deploy": {
    "startCommand": "cd apps/broker && pnpm start",
    "inputs": ["$compile"]
  }
}
