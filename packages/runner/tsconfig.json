{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "lib": ["ES2022"],
    "types": ["node"],
    "resolveJsonModule": true,
    "paths": {
      "@openbuilder/cli/*": ["../../apps/runner/src/*"],
      "@openbuilder/cli": ["../../apps/runner/src/index.ts"],
      "@openbuilder/agent-core/*": ["../agent-core/src/*"],
      "@openbuilder/agent-core": ["../agent-core/src/index.ts"]
    },
    "baseUrl": "."
  },
  "include": [
    "src/**/*",
    "../../apps/runner/src/**/*",
    "../agent-core/src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
